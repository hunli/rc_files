syntax on                 # Enabling syntax highlighting
set clipboard=unnamedplus # Enabling copy and pasting from system clipboard
set expandtab             # Expanding tabs to become spaces
set encoding=utf-8        # Setting default encoding to utf-8
set ic                    # Ignoring case when searching inside a file
set hlsearch              # Highlights the text you search when found
set ruler                 # Shows the ruler in vim so you can see which row and column cursor is on
set tabstop=4             # Each tab has a width of four spaces
